
<div class="container" style="padding:10px">
    <h2>Category Property</h2>

    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#categoryPropertyModal">
        Add New Category Property
    </button>

    <div id="divCategoryProperty">
    </div>



    <!--kaydetme-->
    <div class="modal fade" id="categoryPropertyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="categoryPropertyForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Category Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <label for="inputcategoryName" class="form-label">Category</label>
                        <select type="text" id="inputcategoryName" class="form-control">
                            <option value="" disabled selected>Select Category</option>
                        </select>

                        <label for="inputGroupName" class="form-label">Property Group</label>
                        <select type="text" id="inputGroupName" class="form-control">
                            <option value="" disabled selected>Select Group Property</option>
                        </select>



                        @*   <input type="hidden" value="" />*@


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--düzenleme-->
    <div class="modal fade" id="categoryPropertyEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="categoryPropertyEditForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Category Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <label for="inputEditcategoryName" class="form-label">Category</label>
                        <select type="text" id="inputEditcategoryName" class="form-control">
                            <option value="" disabled selected>Select category</option>
                        </select>

                        <label for="inputEditGroupName" class="form-label">Group Property</label>
                        <select type="text" id="inputEditGroupName" class="form-control">
                            <option value="" disabled selected>Select Group Property</option>
                        </select>
                        <input type="hidden" value="" id="EditcategorypropertyId" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/js/admin/categoryProperty.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
