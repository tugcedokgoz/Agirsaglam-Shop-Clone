
<div class="container" style="padding:10px">
    <h2>Property</h2>
    <div class="d-flex flex-row my-4">
        <input class="mr-3" placeholder="Search by Property Name" id="propertyIdInput" value="" />
        <button type="button" class="btn btn-outline-primary" id="searchButton">Search</button>
    </div>
    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#propertyModal">
        Add New Property
    </button>

    <div id="divProperty">
    </div>



    <!--kaydetme-->
    <div class="modal fade" id="propertyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="propertyForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="inputPropertyGroupName" class="form-label">Property</label>
                        <select type="text" id="inputPropertyGroupName" class="form-control">
                            <option value="" disabled selected>Select Property Group</option>
                        </select>

                        <label for="inputpropertyName" class="form-label">Property Name</label>
                        <input type="text" id="inputpropertyName" class="form-control" name="propertyName" />
                        <input type="hidden" value="" />


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--düzenleme-->
    <div class="modal fade" id="propertyEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="propertyEditForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="inputEditPropertyGroupName" class="form-label">Property</label>
                        <select type="text" id="inputEditPropertyGroupName" class="form-control">
                            <option value="" disabled selected>Select Property Group</option>
                        </select>


                        <label for="inputEditpropertyName" class="form-label">Property Name</label>
                        <input type="text" id="inputEditpropertyName" class="form-control" name="propertyName" />
                        <input type="hidden" value="" id="EditpropertyId" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/js/admin/property.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
