
<div class="container" style="padding:10px">
    <h2>Categories</h2>
    <div class="d-flex flex-row my-4">
        <input class="mr-3" placeholder="Search by Category Name" id="categoryNameInput" value="" />
        <button type="button" class="btn btn-outline-primary" id="searchButton">Search</button>
    </div>
    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#categoryModal">
        Add New Category
    </button>
    <div id="divCategory">
    </div>




    <!--Kaydetme-->
    <div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="categoryForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Category</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="inputEditCategoryName" class="form-label">Category Name</label>
                        <input type="text" id="inputEditCategoryName" class="form-control" name="productName" />

                        <label for="inputEditParentCategory" class="form-label">Parent Category</label>
                        <input type="text" id="inputEditParentCategory" class="form-control" name="productParentCategory" />

                        <label for="inputEditStatus" class="form-label">Status</label>
                        <input type="text" id="inputEditStatus" class="form-control" name="status" />

                     
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Düzenleme-->
    <div class="modal fade" id="categoryEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="categoryEditForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Category</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="inputEditCategoryName" class="form-label">Category Name</label>
                        <input type="text" id="inputEditCategoryName" class="form-control" name="productName" />

                        <label for="inputEditParentCategory" class="form-label">Parent Category</label>
                        <input type="text" id="inputEditParentCategory" class="form-control" name="productParentCategory" />

                        <label for="inputEditStatus" class="form-label">Status</label>
                        <input type="text" id="inputEditStatus" class="form-control" name="status" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/admin/category.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
