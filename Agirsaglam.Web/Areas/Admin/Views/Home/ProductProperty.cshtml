
<div class="container" style="padding:10px">
    <h2>Product Property</h2>
    <div class="d-flex flex-row my-4">
        <input class="mr-3" placeholder="Search by Product Property Name" id="productPropertyIdInput" value="" />
        <button type="button" class="btn btn-outline-primary" id="searchButton">Search</button>
    </div>
    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#productPropertyModal">
        Add New Product Property
    </button>

    <div id="divProductProperty">
    </div>



    <!--kaydetme-->
    <div class="modal fade" id="productPropertyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="productPropertyForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Product Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <label for="inputProductName" class="form-label">Product</label>
                        <select type="text" id="inputProductName" class="form-control">
                            <option value="" disabled selected>Select Product</option>
                        </select>

                           <label for="inputPropertyName" class="form-label">Property</label>
                        <select type="text" id="inputPropertyName" class="form-control">
                            <option value="" disabled selected>Select Property</option>
                        </select>

                      

                        @*   <input type="hidden" value="" />*@


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--düzenleme-->
    <div class="modal fade" id="productPropertyEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="productPropertyEditForm">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Product Property</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <label for="inputEditProductName" class="form-label">Product</label>
                        <select type="text" id="inputEditproductName" class="form-control">
                            <option value="" disabled selected>Select Product</option>
                        </select>

                           <label for="inputEditPropertyName" class="form-label">Property</label>
                        <select type="text" id="inputEditPropertyName" class="form-control">
                            <option value="" disabled selected>Select Property</option>
                        </select>
                            <input type="hidden" value="" id="EditProductpropertyId" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/js/admin/productProperty.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
